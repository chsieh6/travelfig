<div class="navbar-wrapper">
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <%= link_to "TravelFig", root_path, class: "brand logo pin_link" %>
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse collapse">
      <!-- If the user is signed in display the following  -->
      <% if user_signed_in? %>
        <ul class="nav pull-right">
          <li><%= link_to "+ Travel", new_pin_path %></li>
          <li><%= link_to "Browse Destinations", pins_path, class: "pin_link"%></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "My TravelFig", current_user %></li>
              <li><%= link_to "My Setting", edit_user_registration_path %></li>
              <li><%= link_to "Help", contact_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Destinations", new_user_session_path %></li>
          <li><%= link_to "Contact Us", contact_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        </ul>
      <% end %>
      </div> <!-- /.nav-collapse -->
    </div> <!-- /.navbar-inner -->
  </header> <!-- /.navbar navbar-inverse -->
</div><!-- /.navbar-wrapper -->
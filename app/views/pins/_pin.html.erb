<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
    <p class="description"><%= pin.descriptions %></p>
    <p><strong>Posted by <%= pin.user.username %></strong></p>
		<% if (current_user == pin.user) || (current_user.admin) %>
		  <p>
		  	<%= link_to 'Edit', edit_pin_path(pin) %>
		  	<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	    </p>
		<% end %>
</div>
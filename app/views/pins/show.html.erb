<% provide(:title, 'The Pin') %>
<div class="container show_pin">
  <div class="row">
    <div class="col-md-7 col-md-offset-2 well">
  		<%= image_tag @pin.image %>
			<p><strong>Descriptions:</strong><%= @pin.descriptions %></p>
			<p><strong>Pinned by:</strong><%= @pin.user.username %></p>
			<% if (current_user == @pin.user) || (current_user.admin) %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>
<% provide(:title, 'Edit Profile') %>
<div class="container edit_profile">
  <div class="row">
    <div class="span5 offset3 well">

      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <%= f.input :current_password, :autocomplete => "off" %>
        <%= f.input :password, :autocomplete => "off" %>
        <%= f.input :password_confirmation %>

        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn btn-success"  %>
      <% end %>

      <h5>Unhappy with TravelFig? <br/><br/> <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure? No turning back if you press the button!" }, class: "btn btn-danger", :method => :delete %></h5>

      
    </div>
  </div>
</div>

<% provide(:title, 'Sign Up') %>

<div class="container sign_up">
	<div class="row">
	  <div class="span5 offset3 well">
	  	<h1>Sign up for TravelFig<br/><small>It's free to discover the world</small></h1>

			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= f.error_notification %>
			  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  			<%= f.full_error :image_content_type, class: "alert alert-error" %>

			  <%= f.input :username %>
			  <%= f.input :email %>
				<%= f.input :password %>
				<%= f.input :password_confirmation %>
				<%= f.input :avatar, label: "Upload an profile image" %>

			 	<%= f.submit "Sign up", class: "btn btn-primary" %>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
